generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model users {
  id               Int                      @id @default(autoincrement())
  namalengkap      String                   @db.VarChar(100)
  email            String                   @db.VarChar(100)
  tanggallahir     DateTime?                @db.Date
  pendidikan       String?                  @db.VarChar(50)
  alamat           String?
  pekerjaan        String?                  @db.VarChar(50)
  namaanak         String?                  @db.VarChar(100)
  tanggallahiranak DateTime?                @db.Date
  jeniskelaminanak jenis_kelamin_anak_enum?
  beratbadan       Decimal?                 @db.Decimal(5, 2)
  tinggibadan      Decimal?                 @db.Decimal(5, 2)
  created_at       DateTime                 @default(now()) @db.Timestamp(6)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model hasil_total {
  id                Int      @id @default(autoincrement())
  user_id           Int
  total_pengetahuan Int?     @default(0)
  total_sikap       Int?     @default(0)
  total_motivasi    Int?     @default(0)
  total_skor        Int?     @default(dbgenerated("((total_pengetahuan + total_sikap) + total_motivasi)"))
  created_at        DateTime @default(now()) @db.Timestamp(6)
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model motivasi_ibu {
  id         Int          @id @default(autoincrement())
  user_id    Int
  nomor_soal Int
  jawaban    jawaban_enum
  poin       Int?         @default(dbgenerated("\nCASE\n    WHEN (jawaban = 'Sangat Setuju'::jawaban_enum) THEN 4\n    WHEN (jawaban = 'Setuju'::jawaban_enum) THEN 3\n    WHEN (jawaban = 'Tidak Setuju'::jawaban_enum) THEN 2\n    WHEN (jawaban = 'Sangat Tidak Setuju'::jawaban_enum) THEN 1\n    ELSE 0\nEND"))
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model pengetahuan_ibu {
  id         Int                 @id @default(autoincrement())
  user_id    Int
  nomor_soal Int
  jawaban    jawaban_benar_salah
  poin       Int?                @default(dbgenerated("\nCASE\n    WHEN (jawaban = 'Benar'::jawaban_benar_salah) THEN 2\n    ELSE 1\nEND"))
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model sikap_ibu {
  id         Int          @id @default(autoincrement())
  user_id    Int
  nomor_soal Int
  jawaban    jawaban_enum
  poin       Int?         @default(dbgenerated("\nCASE\n    WHEN (jawaban = 'Sangat Setuju'::jawaban_enum) THEN 4\n    WHEN (jawaban = 'Setuju'::jawaban_enum) THEN 3\n    WHEN (jawaban = 'Tidak Setuju'::jawaban_enum) THEN 2\n    WHEN (jawaban = 'Sangat Tidak Setuju'::jawaban_enum) THEN 1\n    ELSE 0\nEND"))
}

enum jawaban_benar_salah {
  Benar
  Salah
}

enum jawaban_enum {
  Sangat_Setuju       @map("Sangat Setuju")
  Setuju
  Tidak_Setuju        @map("Tidak Setuju")
  Sangat_Tidak_Setuju @map("Sangat Tidak Setuju")
}

enum jenis_kelamin_anak_enum {
  Laki_laki @map("Laki-laki")
  Perempuan
}
